</nav>
<div
  class="layer hidden absolute top-0 left-0 h-screen w-screen bg-black opacity-10 z-10 md:hidden"
>
</div>
<div
  class="mobile-menu absolute top-0 left-0 w-screen bg-main px-5 hidden z-20 text-white md:hidden"
>
  <div>
    <div
      class="flex justify-between space-x-3 content-center items-center py-7 font-sans"
    >
      <div>
        <a href="/" class="text-white text-2xl leading-6 font-bold">HIBOU</a>
      </div>
      <button class="menu-btn flex flex-col gap-y-1 relative close-menu-btn">
        <div class="w-10 h-1 bg-white rounded rotate-45 absolute"></div>
        <div class="w-10 h-1 bg-white rounded -rotate-45"></div>
      </button>
    </div>
    <ul class="menu-list text-xl font-sans py-3">
      <li class="py-6 leading-6"><a href="/">Articles</a></li>
      <li class="py-6"><a href="/series">Series</a></li>
    </ul>
  </div>
</div>

<script>
  const menuBtns = document.querySelectorAll('.menu-btn');
  const mobileMenu = document.querySelector('.mobile-menu');
  const layer = document.querySelector('.layer');

  menuBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
      layer?.classList.toggle('hidden');
    });
  });

  layer?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    layer.classList.toggle('hidden');
  });

  window.addEventListener('resize', () => {
    if (window.screen.width > 728) {
      mobileMenu?.classList.add('hidden');
      layer?.classList.add('hidden');
    }
  });
</script>
