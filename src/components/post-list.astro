---
import PostPreview from './post-preview.astro';
const { posts } = Astro.props;
---

<div class="post-list flex flex-col gap-y-16">
  {
    posts.map((post: any) => (
      <PostPreview
        url={post.url}
        desc={post.frontmatter.desc}
        title={post.frontmatter.title}
        tags={post.frontmatter.tags}
        date={post.frontmatter.pubDate.slice(0, 10)}
      />
    ))
  }
</div>
